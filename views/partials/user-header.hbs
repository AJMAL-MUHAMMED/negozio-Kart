                    </div>

                    <a href="/wishlist"
                        class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti"
                        data-notify="{{wishProCount}}">
                        <i class="zmdi zmdi-favorite-outline"></i>
                    </a>
                    <div class="icon-header-item cl2 hov-cl1 trans-04 ">
                        <div class="dropdown">
                            <button class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11   "
                                type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
                                aria-expanded="false">
                                <i class="zmdi zmdi-account-circle"></i>
                            </button>


                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="background-color:">
                                {{#if user}}
                                <a class="dropdown-item" href="/userprofile">{{user.FullName}} </a>

                                <a class="dropdown-item" href="/logout">Logout </a>
                                {{else}}
