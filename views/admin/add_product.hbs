<script>
  $(document).ready(function () {
    $("#AddProduct").validate({
      rules: {
        productname: {
          required: true,

        },
        brandname: {
          required: true,

        },
        price: {
          required: true,
        },
        discountprice: {
          required: true,
        },
        description: {
          required: true,
        },
        category: {
          required: true,
        },
        size: {
          required: true,
        },
        unitsinstock: {
          required: true,
        },
        image: {
          required: true,
        }
      },
      messages: {

        productname: {
          required: "Please enter your Product Name",

        },
        brandname: {
          required: "Please enter your Brand Name",

        },
        price: {
          required: "Please enter your Price",
        },
        discountprice: {
          required: "Please enter your Discount Price",
        },
        description: {
          required: "Please enter your Description",
        },
        category: {
          required: "Please enter your Category",
        },
        size: {
          required: "Please enter your size",
        },
        unitsinstock: {
          required: "Please enter your Untsinstock",
        },
        image: {
          required: "Please Add your image",
        }
      }
    })
  })
</script>

<script>
  $(function () {
    $("#expire_date").datepicker();
  });
</script>

{{!-- onchange="viewImage (event)" --}}
<script>
  function viewImage(event) {
    document.getElementById('imgView').src = URL.createObjectURL(event.target.files[0])
  }
</script>
<style>
  label.error{
    color: rgb(255, 116, 116) !important;
  }
